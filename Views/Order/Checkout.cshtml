@model Order
<h3 class="text-primary">Vui lòng điền thông tin</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <hr />
    <div class="form-group">
        <label>Họ tên:<span><input asp-for="Name" class="form-control" style="width:50vw" /></span></label>
    </div>
    <div class="form-group">
        <label>Số điện thoại:</label><input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tỉnh:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thành phố:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ:</label><input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sô tài khoản:</label><input asp-for="BankNumber" class="form-control" />
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Order" />
    </div>
</form>
